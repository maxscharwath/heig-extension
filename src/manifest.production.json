{
    "manifest_version": 3,
    "name": "HEIG-VD Extension",
    "description": "HEIG-VD extension is useful if you are a student at HEIG-VD",
    "version": "0.0.2",
    "background": {
        "service_worker": "/background.js"
    },
    "host_permissions": ["https://apix.blacktree.io/*", "*://*.heig-vd.ch/*", "*://gun.stmx.ch/*"],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "/content.js"
            ]
        }
    ],
    "options_page": "options.html",
    "permissions": [
        "alarms",
        "storage",
        "cookies"
    ]
}
