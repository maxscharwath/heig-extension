{
  "manifest_version": 2,
  "name": "HEIG-VD Extension",
  "description": "HEIG-VD extension is useful if you are a student at HEIG-VD",
  "version": "0.1.0",
  "icons": {
    "16": "icons/x16.png",
    "32": "icons/x32.png",
    "48": "icons/x48.png",
    "128": "icons/x128.png"
  },
  "background": {
    "scripts": [
      "/background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "alarms",
    "storage",
    "cookies",
    "identity",
    "https://apix.blacktree.io/*",
    "*://*.heig-vd.ch/*",
    "*://gun.stmx.ch/*"
  ]
}
